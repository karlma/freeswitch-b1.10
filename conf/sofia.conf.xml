	<!-- <param name="ext-sip-ip" value="100.101.102.103"/> -->
	<!-- VAD choose one (out is a good choice); -->
	<!-- <param name="vad" value="in"/> -->
	<!-- <param name="vad" value="out"/> -->
	<!-- <param name="vad" value="both"/> -->
	<!--<param name="alias" value="sip:10.0.1.251:5555"/>-->
      </settings>
    </profile>
  </profiles>
</configuration>
